<!-- views/blog.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog - Milind Pandav</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <header>
      <div class="logo">
        <img
        src=https://www.zarla.com/images/zarla-m-1x1-2400x2400-20211117-yfr6bmdv489bb7b79mxg.png?crop=1:1,smart&width=250&dpr=2"
        alt="Logo">
      </div>
      <div class="container">
        <h1>Milind Pandav</h1>
        <p>Solution Engineer | TIBCO Advocate | Content Creator</p>
        <nav>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/blog">Blogs</a></li>
            <li><a href="/resume">Resume</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <main>
      <section class="blog-list">
        <div class="container">
          <h1>Blog</h1>
          <ul>
            <% blogs.forEach(blog => { %>
            <li>
              <h2><a href="/blog/<%= blog.id %>"><%= blog.title %></a></h2>
            </li>
            <% }) %>
          </ul>
        </div>
      </section>
    </main>

    <footer>
      <div class="container">
        <p>&copy; 2025 Milind Pandav</p>
      </div>
    </footer>
    <script src="/js/scripts.js"></script>
  </body>
</html>
